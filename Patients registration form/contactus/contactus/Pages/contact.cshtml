@page
@model contactus.Pages.contactModel
@{
	ViewData["tittle"] = "contact us";
}
<h3>
	Contact form
</h3>

@if(Model.hasData)
{
	<p> Hello @Model.Fullname @Model.Email</p>
	<p>we have received your message correctly:</p>
	<p>@Model.message</p>
}

<div class="container">
	<form mehod="POST">
		<label for="fname">Fullname</label> <br />
		<input type="text" id="fname" name=" fullname" /><br />

		<label for="email">Email</label> <br />
		<input type="text" id="Email" name=" email" /><br />

		<label for="message">Ask for help</label><br />
		<textarea id="message" name=" message" style="height:200px"></textarea><br />

		<input type="submit" value="submit" />
	</form>

</div>